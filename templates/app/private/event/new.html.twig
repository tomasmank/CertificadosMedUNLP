        <div id="component" class="container">
            <div class="row mt-1">
                <div class="col">
                    <h3>Nuevo evento</h3>
                </div>
            </div>
            <form action="">
                <div class="container border rounded">
                    <div class="container">
                        <h4 class="mt-3 mb-3">Datos del evento</h4>
                        <div class="mt-3 mb-3 row">
                            <label for="inputName" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputName">
                            </div>
                        </div>
                        <div class="mt-3 mb-3 row">
                            <label for="inputUbicationName" class="col-sm-2 col-form-label">Ubicacion</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputUbicationName">
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col">
                                <label for="inputName" class="form-label">Fecha inicio</label>
                                <input type="date" class="form-control" id="inputName">
                            </div>
                            <div class="col">
                                <label for="inputName" class="form-label">Fecha fin</label>
                                <input type="date" class="form-control" id="inputName">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="container border rounded mt-3">
                    <div class="container">
                        <h4 class="mt-3 mb-3 ">Asistentes</h4>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="file" class="form-control" id="inputAsistentesFile"
                                        aria-describedby="inputAsistentesAddon" aria-label="Upload">
                                    <button class="btn btn-outline-secondary" type="reset"
                                        id="inputAsistentesAddon">x</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-muted">
                                    Cantidad de asistentes: XX. <a href="#">(Ver detalle)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container border rounded mt-3">
                    <div class="container">
                        <h4 class="mt-3 mb-3 ">Template</h4>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                                        <option selected>Seleccionar...</option>
                                        <option value="1">Template 1</option>
                                        <option value="2">Template 2</option>
                                        <option value="3">Template 3</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                        <button class="btn btn-secondary mb-3">Cancelar y volver</button>
                        <button class="btn btn-success mb-3">Crear evento</button>
                    </div>
                </div>
            </form>
