{% extends '@layout/base.html.twig' %}

{% block title %} Ver evento {% endblock %}

{% block content %}

<div id="component" class="container">
    <div class="row mt-1">
        <div class="col">
            <h3>Ver o modificar evento</h3>
        </div>
    </div>
    <form action="{{path("modifyEvent")}}">
        <input type="hidden" id="eventID" name="eventID" value="{{event.id}}"> 
        <div class="container border rounded">
            <div class="container">
                <h4 class="mt-3 mb-3">Datos del evento</h4>
                <div class="mt-3 mb-3 row">
                    <label for="eventName" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="eventName" name="eventName" value="{{event.name}}" required>
                    </div>
                </div>
                <div class="mt-3 mb-3 row">
                    <label for="cityID" class="col-sm-2 col-form-label">Ubicación</label>
                    <div class="col-sm-10">     
                        <select name="cityID" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                            <option selected value="{{event.city.id}}">{{event.city.name}}</option>
                            {% for c in cities %}
                                <option value="{{ c.id }}">{{ c.name }}</option>
                            {% endfor %}
                        </select>
                        <a href={{path("newCity")}} class="btn btn-secondary" style="background-color: #00889B; float: right;">Nueva ubicación</a>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col">
                        <label for="startDate" class="form-label">Fecha inicio</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" 
                            {% if event.startDate is not empty %} 
                                value={{event.startDate|date('Y-m-d')}}>
                            {% endif %}
                    </div>
                    <div class="col">
                        <label for="endDate" class="form-label">Fecha fin</label>
                        <input type="date" class="form-control" id="endDate" name="endDate"
                            {% if event.endDate is not empty %} 
                                value={{event.endDate|date('Y-m-d')}}>
                            {% endif %}
                    </div>
                </div>
            </div>

        </div>
        <div class="container border rounded mt-3">
            <div class="container">
                <h4 class="mt-3 mb-3 ">Asistentes</h4>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="file" class="form-control" id="inputAttendeesFile" name="inputAttendeesFile"
                                aria-describedby="inputAttendeesAddon" aria-label="Upload">
                            <button class="btn btn-outline-secondary" type="reset" id="inputAttendeesAddon">x</button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-muted">
                            Cantidad de asistentes: {{qty}} 
                            
                                <a href="{{path('viewAttendees', {eventID: event.id})}}" >Ver detalle</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container border rounded mt-3">
            <div class="container">
                <h4 class="mt-3 mb-3 ">Template</h4>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <select name="templateID" class="form-select form-select-sm" aria-label=".form-select-sm example">
                                <option selected {% if (event.template != null) %} value="{{event.template.id}}"> {{event.template.name}} </option>
                                                    {% else %} > Seleccionar... </option>
                                                {% endif %}
                                {% for t in templates %}
                                    <option value="{{ t.id }}">{{ t.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container border rounded mt-3">
            <div class="container">
                <h4 class="mt-3 mb-3 ">Publicado</h4>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-3">
                            <label class="switch">
                                <input type="checkbox" id="published" name="published" class="slider round" 
                                    {% if (event.published == 1) %}
                                        checked>
                                    {% else %}
                                        unchecked>
                                    {% endif %}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                <div>
                    <button type="button" class="btn btn-danger mb-4" data-bs-toggle="modal" data-bs-target="#deleteEventModal">
                        Eliminar
                    </button>
                </div>
                <div>
                    <a class="btn btn-secondary mb-3" href={{ path('events') }}>Cancelar y volver</a>
                    <button class="btn btn-success mb-3">Modificar evento</button>
                </div>
            </div>
            <!-- Delete modal -->
            <div class="modal fade" id="deleteEventModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">¿Eliminar evento definitivamente?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p><b>Nombre:</b> {{ event.name }}</p>
                            <p><b>Ciudad:</b> {{ event.city.name }}</p>
                            <p><b>Desde :</b> {{ event.startDate|date('Y-m-d') }}</p>
                            <p><b>Hasta :</b> {{ event.endDate|date('Y-m-d') }}</p>
                            <p>(Esta acción no puede deshacerse)</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <a href="{{ path('deleteEvent', {eventID: event.id}) }}" class="btn btn-danger">Sí, eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{% endblock %}