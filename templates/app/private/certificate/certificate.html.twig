{% extends '@certificate_path/base.html.twig' %}

{% block content %}

<div class="container p-0 m-0 page">
    <div class="row row-cols-1 ml-0 mr-0 page" style="background-color: {{ event.template.backgroundColor }};">
        <div class="col align-self-start p-0">
            <div class="row">
                {% if event.template.header %}
                <img src="{{ pathToUploads }}/headers/{{ event.template.header }}" alt="" class="p-0">
                {% endif %}
            </div>
        </div>
        <div class="col align-self-center">
            {{ body|raw }}
        </div>
        <div class="col align-self-end p-0">
            <div class="row">
                {% if event.template.signs %}
                <img src="{{ pathToUploads }}/signatures/{{ event.template.signs }}" alt="" class="p-0">
                {% endif %}
            </div>
            <div class="row">
                {% if event.template.footer %}
                <img src="{{ pathToUploads }}/footers/{{ event.template.footer }}" alt="" class="p-0">
                {% endif %}
            </div>
        </div>
    </div>
</div>


{% endblock %}